{
  "type": "page",
  "name": "deptList",
  "body": [
    {
      "type": "crud",
      "name": "menuList",
      "api": "/dp-manager/system/dept/listTree",
      "filter": {
        "title": "",
        "mode": "inline",
        "wrapWithPanel": false,
        "submitText": "",
        "controls": [
          {
            "type": "text",
            "name": "name",
            "placeholder": "部门名称",
            "label": "部门名称",
            "size": "sm",
            "clearable": true
          },
          {
            "type": "select",
            "name": "status",
            "placeholder": "状态",
            "label": "状态",
            "size": "sm",
            "options": [
              {
                "label": "开启",
                "value": "0"
              },
              {
                "label": "关闭",
                "value": "1"
              }
            ],
            "clearable": true
          },
          {
            "type": "submit",
            "label": "搜索",
            "size": "md",
            "className": "btn-primary"
          }
        ],
        "className": "m-b-sm"
      },
      "headerToolbar": [
        {
          "type": "button",
          "actionType": "dialog",
          "icon": "fa fa-plus",
          "label": "新增",
          "target": "menuList",
          "primary": true,
          "closeOnOutside": false,
          "dialog": {
            "title": "创建记录",
            "body": {
              "type": "form",
              "api": {
                "url": "dp-manager/system/dept/create",
                "method": "post"
              },
              "body": [
                {
                  "type": "tree-select",
                  "name": "parentId",
                  "label": "上级部门",
                  "required": true,
                  "source": {
                    "url": "/dp-manager/system/dept/tree"
                  }
                },
                {
                  "type": "input-text",
                  "name": "code",
                  "label": "部门编码",
                  "required": true
                },
                {
                  "type": "input-text",
                  "name": "name",
                  "label": "部门名称",
                  "required": true
                },
                {
                  "name": "status",
                  "label": "状态",
                  "type": "select",
                  "required": true,
                  "options": [
                    {
                      "label": "开启",
                      "value": "0"
                    },
                    {
                      "label": "关闭",
                      "value": "1"
                    }
                  ]
                },
                {
                  "type": "input-text",
                  "name": "phone",
                  "label": "联系电话"
                },
                {
                  "type": "input-text",
                  "name": "type",
                  "label": "类型",
                  "value": "1",
                  "hidden": true
                },
                {
                  "type": "input-text",
                  "name": "sort",
                  "label": "显示顺序",
                  "value": "1"
                },
                {
                  "type": "textarea",
                  "name": "remark",
                  "label": "备注"
                }
              ]
            }
          }
        }
      ],
      "columns": [
        {
          "name": "id",
          "label": "部门编号",
          "width": 20,
          "hidden": true,
          "sortable": true
        },
        {
          "name": "parentId",
          "label": "父级部门id",
          "hidden": true
        },
        {
          "name": "tenantId",
          "label": "所属集团编号",
          "hidden": true
        },
        {
          "name": "code",
          "label": "编码"
        },
        {
          "name": "name",
          "label": "名称"
        },
        {
          "name": "type",
          "label": "类型",
          "type": "mapping",
          "map": {
            "0": "<span class='label label-success'>集团</span>",
            "1": "<span class='label label-info'>部门</span>"
          }
        },
        {
          "name": "status",
          "label": "状态",
          "type": "mapping",
          "map": {
            "0": "<span class='label label-success'>开启</span>",
            "1": "<span class='label label-danger'>关闭</span>"
          }
        },
        {
          "name": "sort",
          "label": "排序"
        },
        {
          "name": "createTime",
          "label": "创建时间"
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "label": "修改",
                  "type": "button",
                  "level": "info",
                  "actionType": "dialog",
                  "visibleOn": "${type == 1}",
                  "dialog": {
                    "title": "部门修改",
                    "body": {
                      "type": "form",
                      "name": "menu-edit-form",
                      "api": "put:/dp-manager/system/dept/update",
                      "body": {
                        "type": "form",
                        "api": {
                          "url": "dp-manager/system/dept/create",
                          "method": "post"
                        },
                        "body": [
                          {
                            "type": "tree-select",
                            "name": "parentId",
                            "label": "上级部门",
                            "required": true,
                            "source": {
                              "url": "/dp-manager/system/dept/tree"
                            }
                          },
                          {
                            "type": "input-text",
                            "name": "code",
                            "label": "部门编码",
                            "required": true
                          },
                          {
                            "type": "input-text",
                            "name": "name",
                            "label": "部门名称",
                            "required": true
                          },
                          {
                            "name": "status",
                            "label": "状态",
                            "type": "select",
                            "required": true,
                            "options": [
                              {
                                "label": "开启",
                                "value": "0"
                              },
                              {
                                "label": "关闭",
                                "value": "1"
                              }
                            ]
                          },
                          {
                            "type": "input-text",
                            "name": "phone",
                            "label": "联系电话"
                          },
                          {
                            "type": "input-text",
                            "name": "type",
                            "label": "类型",
                            "value": "1",
                            "hidden": true
                          },
                          {
                            "type": "input-text",
                            "name": "sort",
                            "label": "显示顺序",
                            "value": "1"
                          },
                          {
                            "type": "textarea",
                            "name": "remark",
                            "label": "备注"
                          }
                        ]
                      }
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "visibleOn": "${type == 1}",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "delete:/dp-manager/system/menu/delete/?id=${id}"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
