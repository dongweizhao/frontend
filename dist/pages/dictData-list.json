{
  "type": "page",
  "title": "数据字典",
  "remark": null,
  "name": "dictDataList",
  "body": [
    {
      "type": "crud",
      "name": "dictTypeList",
      "api": {
        "method": "get",
        "url": "/dp-manager/system/dictData/page",
        "data": {
          "current": "${page}",
          "pageSize": "${perPage}",
          "type": "${type}",
          "name": "${name}",
          "status": "${status}"
        }
      },
      "filter": {
        "title": "",
        "mode": "inline",
        "wrapWithPanel": false,
        "controls": [
          {
            "type": "select",
            "name": "dictType",
            "placeholder": "请选择",
            "label": "字典名称",
            "size": "sm",
            "value": "${type}",
            "source": {
              "url": "/dp-manager/system/dictType/selectList",
              "method": "post",
              "responseData": {
                "options": "${items}"
              }
            },
            "clearable": true
          },
          {
            "type": "text",
            "name": "label",
            "placeholder": "请输入",
            "label": "字典标签",
            "size": "sm",
            "clearable": true
          },
          {
            "type": "text",
            "name": "value",
            "placeholder": "请输入",
            "label": "字典值",
            "size": "sm",
            "clearable": true
          },
          {
            "type": "select",
            "name": "status",
            "placeholder": "请输入",
            "label": "数据状态",
            "size": "sm",
            "options": [
              {
                "label": "启用",
                "value": "0"
              },
              {
                "label": "停用",
                "value": "1"
              }
            ],
            "clearable": true
          },
          {
            "type": "submit",
            "label": "搜索",
            "size": "md",
            "className": "btn-primary"
          }
        ],
        "className": "m-b-sm"
      },
      "footerToolbar": [
        "switch-per-page",
        "pagination"
      ],
      "headerToolbar": [
        {
          "type": "button",
          "actionType": "dialog",
          "icon": "fa fa-plus",
          "label": "新增",
          "target": "dictDataList",
          "primary": true,
          "closeOnOutside": false,
          "dialog": {
            "title": "新增字典",
            "size": "md",
            "showErrorMsg": false,
            "body": {
              "type": "form",
              "api": "post:/dp-manager/system/dictType/create",
              "body": [
                {
                  "type": "input-text",
                  "name": "name",
                  "label": "字典名称",
                  "required": true
                },
                {
                  "type": "input-text",
                  "name": "type",
                  "label": "字典key",
                  "required": true
                },
                {
                  "type": "radios",
                  "name": "status",
                  "label": "状态",
                  "value": 0,
                  "options": [
                    {
                      "label": "启用",
                      "value": "0"
                    },
                    {
                      "label": "停用",
                      "value": "1"
                    }
                  ]
                },
                {
                  "type": "textarea",
                  "name": "remark",
                  "label": "备注"
                }
              ]
            }
          }
        }
      ],
      "columns": [
        {
          "name": "id",
          "label": "字典编号"
        },
        {
          "name": "label",
          "label": "字典标签"
        },
        {
          "name": "value",
          "label": "字典值"
        },
        {
          "name": "dictType",
          "label": "字典类型"
        },
        {
          "name": "status",
          "label": "状态",
          "type": "mapping",
          "map": {
            "0": "<span class='label label-info'>启用</span>",
            "1": "<span class='label label-danger'>停用</span>"
          }
        },
        {
          "name": "remark",
          "label": "备注",
          "width": 200
        },
        {
          "name": "createTime",
          "label": "创建时间",
          "width": 150
        },
        {
          "type": "operation",
          "label": "操作",
          "width": 150,
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "label": "修改",
                  "type": "button",
                  "level": "info",
                  "actionType": "dialog",
                  "dialog": {
                    "size": "md",
                    "title": "字典修改",
                    "body": {
                      "type": "form",
                      "name": "dictType-edit-form",
                      "api": "put:/dp-manager/system/dictType/update",
                      "body": [
                        {
                          "type": "hidden",
                          "name": "id"
                        },
                        {
                          "type": "input-text",
                          "name": "name",
                          "label": "字典名称",
                          "required": true
                        },
                        {
                          "type": "input-text",
                          "name": "type",
                          "label": "字典key",
                          "required": true
                        },
                        {
                          "type": "radios",
                          "name": "status",
                          "label": "状态",
                          "value": 0,
                          "options": [
                            {
                              "label": "启用",
                              "value": "0"
                            },
                            {
                              "label": "停用",
                              "value": "1"
                            }
                          ]
                        },
                        {
                          "type": "textarea",
                          "name": "remark",
                          "label": "备注"
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "数据",
                  "level": "info",
                  "actionType": "dialog",
                  "dialog": {
                    "title": "角色分配",
                    "body": {
                      "type": "form",
                      "name": "role-set-form",
                      "initApi": "/dp-manager/system/permission/list-variable-roles?variableId=${id}",
                      "api": {
                        "method": "post",
                        "url": "/dp-manager/system/permission/assign-variable-role",
                        "data": {
                          "variableId": "${variableId}",
                          "roleIds": "${roleIds|split}"
                        }
                      },
                      "body": [
                        {
                          "type": "hidden",
                          "name": "variableId",
                          "value": "${id}"
                        },
                        {
                          "type": "input-text",
                          "name": "variablename",
                          "label": "用户账号",
                          "disabled": true
                        },
                        {
                          "type": "input-text",
                          "name": "nickname",
                          "label": "用户账号",
                          "disabled": true
                        },
                        {
                          "type": "select",
                          "name": "roleIds",
                          "label": "角色列表",
                          "multiple": true,
                          "source": {
                            "url": "/dp-manager/system/role/list-all-simple"
                          }
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "delete:/dp-manager/system/dictType/delete/?id=${id}"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
