{
  "type": "page",
  "name": "menuList",
  "body": [
    {
      "type": "crud",
      "name": "menuList",
      "api": "/dp-manager/system/menu/list",
      "filter": {
        "title": "",
        "mode": "inline",
        "wrapWithPanel": false,
        "submitText": "",
        "controls": [
          {
            "type": "text",
            "name": "name",
            "placeholder": "菜单名称",
            "label": "菜单名称",
            "size": "sm",
            "clearable": true
          },
          {
            "type": "select",
            "name": "type",
            "placeholder": "菜单类型",
            "label": "菜单类型",
            "size": "sm",
            "options": [
              {
                "label": "目录",
                "value": "1"
              },
              {
                "label": "菜单",
                "value": "2"
              },
              {
                "label": "按钮",
                "value": "3"
              }
            ],
            "clearable": true
          },
          {
            "type": "select",
            "name": "status",
            "placeholder": "状态",
            "label": "状态",
            "size": "sm",
            "options": [
              {
                "label": "开启",
                "value": "0"
              },
              {
                "label": "关闭",
                "value": "1"
              }
            ],
            "clearable": true
          },
          {
            "type": "submit",
            "label": "搜索",
            "size": "md",
            "className": "btn-primary"
          }
        ],
        "className": "m-b-sm"
      },
      "headerToolbar": [
        {
          "type": "button",
          "actionType": "dialog",
          "icon": "fa fa-plus",
          "label": "新增",
          "target": "menuList",
          "primary": true,
          "closeOnOutside": false,
          "dialog": {
            "title": "创建记录",
            "body": {
              "type": "form",
              "api": {
                "url": "dp-manager/system/menu/create",
                "method": "post"
              },
              "body": [
                {
                  "type": "tree-select",
                  "name": "parentId",
                  "label": "父级菜单",
                  "source": {
                    "url": "/dp-manager/system/menu/selectMenuTree"
                  }
                },
                {
                  "type": "input-text",
                  "name": "name",
                  "label": "菜单名称",
                  "required": true
                },
                {
                  "type": "input-text",
                  "name": "enName",
                  "label": "菜单英文名称"
                },
                {
                  "name": "system",
                  "label": "菜单所属系统",
                  "required": true,
                  "type": "select",
                  "options": [
                    {
                      "label": "PC",
                      "value": "1"
                    },
                    {
                      "label": "APP",
                      "value": "2"
                    }
                  ]
                },
                {
                  "name": "type",
                  "label": "菜单类型",
                  "required": true,
                  "type": "select",
                  "options": [
                    {
                      "label": "目录",
                      "value": "1"
                    },
                    {
                      "label": "菜单",
                      "value": "2"
                    },
                    {
                      "label": "按钮",
                      "value": "3"
                    }
                  ]
                },
                {
                  "name": "status",
                  "label": "状态",
                  "type": "select",
                  "required": true,
                  "options": [
                    {
                      "label": "开启",
                      "value": "0"
                    },
                    {
                      "label": "关闭",
                      "value": "1"
                    }
                  ]
                },
                {
                  "type": "input-text",
                  "name": "path",
                  "label": "路由地址"
                },
                {
                  "type": "input-text",
                  "name": "component",
                  "label": "组件路径"
                },
                {
                  "type": "input-text",
                  "name": "permission",
                  "label": "权限标识"
                },
                {
                  "type": "input-text",
                  "name": "sort",
                  "label": "显示顺序",
                  "value": "1"
                },
                {
                  "type": "input-text",
                  "name": "icon",
                  "label": "菜单图标"
                },
                {
                  "type": "input-text",
                  "name": "resourceCode",
                  "label": "资源编码"
                },
                {
                  "type": "select",
                  "name": "openMode",
                  "label": "打开方式",
                  "options": [
                    {
                      "label": "当前页面打开",
                      "value": "0"
                    },
                    {
                      "label": "新窗口打开",
                      "value": "1"
                    }
                  ]
                }
              ]
            }
          }
        }
      ],
      "columns": [
        {
          "name": "id",
          "label": "菜单编号",
          "width": 20,
          "hidden": true,
          "sortable": true
        },
        {
          "name": "name",
          "label": "菜单名称",
          "sortable": true
        },
        {
          "name": "type",
          "label": "菜单类型",
          "sortable": true,
          "type": "mapping",
          "map": {
            "1": "<span class='label label-info'>目录</span>",
            "2": "<span class='label label-success'>菜单</span>",
            "3": "<span class='label label-danger'>按钮</span>"
          }
        },
        {
          "name": "path",
          "label": "路由地址"
        },
        {
          "name": "component",
          "label": "组件路径"
        },
        {
          "name": "permission",
          "label": "权限标识"
        },
        {
          "name": "sort",
          "label": "显示顺序"
        },
        {
          "name": "icon",
          "label": "菜单图标"
        },
        {
          "name": "openMode",
          "label": "打开方式",
          "type": "mapping",
          "map": {
            "0": "当前页面打开",
            "1": "新窗口打开"
          }
        },
        {
          "name": "resourceCode",
          "label": "资源编码"
        },
        {
          "name": "parentId",
          "label": "父级Id",
          "hidden": true
        },
        {
          "name": "enName",
          "label": "英文菜单名称"
        },
        {
          "name": "position",
          "label": "显示位置",
          "hidden": true
        },
        {
          "name": "system",
          "label": "菜单所属系统",
          "type": "mapping",
          "map": {
            "1": "PC",
            "2": "APP"
          }
        },
        {
          "name": "status",
          "label": "状态",
          "type": "mapping",
          "map": {
            "0": "<span class='label label-success'>开启</span>",
            "1": "<span class='label label-danger'>关闭</span>"
          }
        },
        {
          "name": "languageType",
          "label": "语言类型",
          "type": "mapping",
          "map": {
            "default": "中文"
          }
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "label": "修改",
                  "type": "button",
                  "level": "info",
                  "actionType": "dialog",
                  "dialog": {
                    "title": "菜单修改",
                    "body": {
                      "type": "form",
                      "name": "menu-edit-form",
                      "api": "put:/dp-manager/system/menu/update",
                      "body": [
                        {
                          "type": "hidden",
                          "name": "id"
                        },
                        {
                          "type": "hidden",
                          "name": "parentId"
                        },
                        {
                          "type": "hidden",
                          "name": "position"
                        },
                        {
                          "type": "input-text",
                          "name": "name",
                          "label": "菜单名称",
                          "required": true
                        },
                        {
                          "type": "input-text",
                          "name": "enName",
                          "label": "菜单英文名称"
                        },
                        {
                          "name": "system",
                          "label": "菜单所属系统",
                          "required": true,
                          "type": "select",
                          "options": [
                            {
                              "label": "PC",
                              "value": "1"
                            },
                            {
                              "label": "APP",
                              "value": "2"
                            }
                          ]
                        },
                        {
                          "name": "type",
                          "label": "菜单类型",
                          "required": true,
                          "type": "select",
                          "options": [
                            {
                              "label": "目录",
                              "value": "1"
                            },
                            {
                              "label": "菜单",
                              "value": "2"
                            },
                            {
                              "label": "按钮",
                              "value": "3"
                            }
                          ]
                        },
                        {
                          "name": "status",
                          "label": "状态",
                          "type": "select",
                          "required": true,
                          "options": [
                            {
                              "label": "开启",
                              "value": "0"
                            },
                            {
                              "label": "关闭",
                              "value": "1"
                            }
                          ]
                        },
                        {
                          "type": "input-text",
                          "name": "path",
                          "label": "路由地址"
                        },
                        {
                          "type": "input-text",
                          "name": "component",
                          "label": "组件路径"
                        },
                        {
                          "type": "input-text",
                          "name": "permission",
                          "label": "权限标识"
                        },
                        {
                          "type": "input-text",
                          "name": "sort",
                          "label": "显示顺序"
                        },
                        {
                          "type": "input-text",
                          "name": "icon",
                          "label": "菜单图标"
                        },
                        {
                          "type": "input-text",
                          "name": "resourceCode",
                          "label": "资源编码"
                        },
                        {
                          "type": "select",
                          "name": "openMode",
                          "label": "打开方式",
                          "options": [
                            {
                              "label": "当前页面打开",
                              "value": "0"
                            },
                            {
                              "label": "新窗口打开",
                              "value": "1"
                            }
                          ]
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "delete:/dp-manager/system/menu/delete/?id=${id}"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
