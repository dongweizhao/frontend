{
  "type": "page",
  "name": "dpVariableList",
  "body": [
    {
      "type": "crud",
      "name": "dpVariableList",
      "api": {
        "method": "get",
        "url": "/dp-manager/system/config/page",
        "data": {
          "current": "${page}",
          "pageSize": "${perPage}",
          "sysGroup": "${sysGroup}",
          "sysKey": "${sysKey}",
          "sysName": "${sysName}",
          "sysValue": "${sysValue}"
        }
      },
      "filter": {
        "title": "",
        "mode": "inline",
        "wrapWithPanel": false,
        "submitText": "",
        "controls": [
          {
            "type": "select",
            "name": "sysGroup",
            "placeholder": "请选择",
            "label": "分组标签",
            "size": "sm",
            "source": {
              "url": "/dp-manager/system/dictData/selectByKey",
              "method": "post",
              "data": {
                "dictType": "system_type"
              },
              "responseData": {
                "options": "${items}"
              }
            },
            "clearable": true
          },
          {
            "type": "text",
            "name": "sysKey",
            "placeholder": "参数key",
            "label": "参数key",
            "size": "sm",
            "clearable": true
          },
          {
            "type": "text",
            "name": "sysName",
            "placeholder": "参数名称",
            "label": "参数名称",
            "size": "sm",
            "clearable": true
          },
          {
            "type": "text",
            "name": "sysValue",
            "placeholder": "参数值",
            "label": "参数值",
            "size": "sm",
            "clearable": true
          },
          {
            "type": "submit",
            "label": "搜索",
            "size": "md",
            "level": "primary"
          }
        ],
        "className": "m-b-sm"
      },
      "headerToolbar": [
        {
          "type": "button",
          "actionType": "dialog",
          "icon": "fa fa-plus",
          "label": "新增",
          "target": "dpVariableList",
          "primary": true,
          "closeOnOutside": false,
          "dialog": {
            "title": "新增参数",
            "size": "md",
            "showErrorMsg": false,
            "body": {
              "type": "form",
              "api": "post:/dp-manager/system/config/create",
              "body": [
                {
                  "type": "group",
                  "body": [
                    {
                      "type": "select",
                      "name": "sysGroup",
                      "placeholder": "请选择",
                      "label": "分组标签",
                      "required": true,
                      "source": {
                        "url": "/dp-manager/system/dictData/selectByKey",
                        "method": "post",
                        "data": {
                          "dictType": "system_type"
                        },
                        "responseData": {
                          "options": "${items}"
                        }
                      }
                    },
                    {
                      "type": "input-text",
                      "name": "sysName",
                      "label": "参数名称",
                      "required": true
                    }

                  ]
                },
                {
                  "type": "group",
                  "body": [
                    {
                      "type": "input-text",
                      "name": "sysKey",
                      "label": "参数key",
                      "required": true
                    },
                    {
                      "type": "input-text",
                      "name": "sysValue",
                      "label": "参数值",
                      "required": true
                    }
                  ]
                },
                {
                  "type": "textarea",
                  "name": "remark",
                  "label": "备注"
                }
              ]
            }
          }
        }
      ],
      "quickSaveItemApi": "put:/dp-manager/system/config/update",
      "columns": [
        {
          "name": "id",
          "label": "参数编号",
          "sortable": true,
          "hidden": true
        },
        {
          "name": "sysKey",
          "label": "参数key",
          "sortable": true
        },
        {
          "name": "sysName",
          "label": "参数名称",
          "sortable": true
        },
        {
          "name": "sysGroup",
          "label": "分组标签",
          "sortable": true
        },
        {
          "name": "sysValue",
          "label": "参数值",
          "sortable": true,
          "quickEdit": {
            "saveImmediately": true,

            "type": "input-text",
            "size": "xl"
          }
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "label": "修改",
                  "type": "button",
                  "level": "info",
                  "actionType": "dialog",
                  "dialog": {
                    "size": "md",
                    "title": "参数修改",
                    "body": {
                      "type": "form",
                      "name": "config-edit-form",
                      "api": "put:/dp-manager/system/config/update",
                      "body": [
                        {
                          "type": "hidden",
                          "name": "id"
                        },
                        {
                          "type": "group",
                          "body": [
                            {
                              "type": "select",
                              "name": "sysGroup",
                              "placeholder": "请选择",
                              "label": "分组标签",
                              "required": true,
                              "source": {
                                "url": "/dp-manager/system/dictData/selectByKey",
                                "method": "post",
                                "data": {
                                  "dictType": "system_type"
                                },
                                "responseData": {
                                  "options": "${items}"
                                }
                              }
                            },
                            {
                              "type": "input-text",
                              "name": "sysName",
                              "label": "参数名称",
                              "required": true
                            }

                          ]
                        },
                        {
                          "type": "group",
                          "body": [
                            {
                              "type": "input-text",
                              "name": "sysKey",
                              "label": "参数key",
                              "required": true
                            },
                            {
                              "type": "input-text",
                              "name": "sysValue",
                              "label": "参数值",
                              "required": true
                            }
                          ]
                        },
                        {
                          "type": "textarea",
                          "name": "remark",
                          "label": "备注"
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "delete:/dp-manager/system/config/delete/?id=${id}"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
